    <style type="text/css">
      body, p, div {
        font-family: inherit;
        font-size: 14px;
      }
      body a {
        color: #1188e6;
        text-decoration: none;
      }
      p {
        margin: 0;
        padding: 0;
      }
      table.wrapper {
        width: 100% !important;
        table-layout: fixed;
        -webkit-font-smoothing: antialiased;
        -webkit-text-size-adjust: 100%;
        -moz-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
      }
      img.max-width {
        max-width: 100% !important;
      }
      .column.of-2 {
        width: 50%;
      }
      .column.of-3 {
        width: 33.333%;
      }
      .column.of-4 {
        width: 25%;
      }
      @media screen and (max-width: 480px) {
        .preheader .rightColumnContent,
        .footer .rightColumnContent {
          text-align: left !important;
        }
        .preheader .rightColumnContent div,
        .preheader .rightColumnContent span,
        .footer .rightColumnContent div,
        .footer .rightColumnContent span {
          text-align: left !important;
        }
        .preheader .rightColumnContent,
        .preheader .leftColumnContent {
          font-size: 80% !important;
          padding: 5px 0;
        }
        table.wrapper-mobile {
          width: 100% !important;
          table-layout: fixed;
        }
        img.max-width {
          height: auto !important;
          max-width: 100% !important;
        }
        a.bulletproof-button {
          display: block !important;
          width: auto !important;
          font-size: 80%;
          padding-left: 0 !important;
          padding-right: 0 !important;
        }
        .columns {
          width: 100% !important;
        }
        .column {
          display: block !important;
          width: 100% !important;
          padding-left: 0 !important;
          padding-right: 0 !important;
          margin-left: 0 !important;
          margin-right: 0 !important;
        }
      }
      table{
        border:0;                   /* Replace border */
        border-spacing: 0;          /* Replace cellspacing */
        border-collapse: collapse;  /* Patch for Internet Explorer 6 and Internet Explorer 7 */
      }
      table td{
        padding: 0;                 /* Replace cellpadding */
      }
      .w-100 {
        width: 100%;
      }
      main, header, section, aside, footer {
        margin: 0;
        padding: 20px;
        color: #ffffff;
      }
      body {
        background: #fff;
        margin: 0;
        padding: 0;
      }
      main {
        background-color: #e21a4e;
        width: 80%;
        margin: auto;
        height: 100%;
        padding: 15px;
      }
      header, footer {
        background: #fff;
        color: #e21a4e;
      }
      header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
      }
      header {
        text-align: center;
      }
      header p {
        line-height: 1.5;
        font-size: 32px;
      }
      .content {
        background-color: #ec5c82;
        color:#000;
        margin: 0;
        padding: 0;
      }
      footer {
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
      }
      footer .unsubscribe-section,
      footer .unsubscribe-section .unsubscribe--sender-address,
      footer .unsubscribe-section .unsubscribe--sender-city,
      footer .unsubscribe-section .unsubscribe--sender-state,
      footer .unsubscribe-section .unsubscribe--sender-postal-code,
      footer .unsubscribe-section .unsubscribe--link,
      footer .unsubscribe-section .unsubscribe--link-preferences {
        color: #444444;
        font-size: 12px;
        line-height: 20px;
        padding: 16px 0 16px 0;
        text-align: center;
      }
      footer .unsubscribe-section .sender-name,
      footer .unsubscribe-section .unsubscribe--link,
      footer .unsubscribe-section .unsubscribe--link-preferences {
        color: #e21a4e;
      }
      footer .unsubscribe-section .unsubscribe--link:hover,
      footer .unsubscribe-section .unsubscribe--link-preferences:hover {
        color: #ec5c82;
      }
      .shadow {
        text-shadow: 6px 4px 8px black;
      }
      .bg-white {
        background-color: #fff;
        color: #000;
      }
      .bg-black {
        background-color: #000;
        color: #fff;
      }
      .bg-pink {
        background-color:#e21a4e;
        color: #fff;
      }
      .text-white {
        color: #ffffff;
      }
      .text-pink {
        color:#e21a4e;
      }
      .text-size-20 {
        font-size: 18px
      }
      .text-size-18 {
        font-size: 18px
      }
      .text-size-16 {
        font-size: 16px
      }
      .pt-10 {
        padding-top: 10px;
      }
      .pb-10 {
        padding-bottom: 10px;
      }
