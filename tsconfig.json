{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "common/*": ["common/*"],
      "filters/*": ["filters/*"],
      "interfaces/*": ["interfaces/*"],
      "middlewares/*": ["middlewares/*"],
      "migrations/*": ["migrations/*"],
      "modules/*": ["modules/*"],
      "providers/*": ["providers/*"],
      "utils/*": ["utils/*"]
    }
  }
}
